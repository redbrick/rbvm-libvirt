[general]
emailaddress = Redbrick Admins <admins@redbrick.dcu.ie>
siteaddress = http://localhost:8080/
vmmon = kvm
moduledir = /home/andrew/rbvm/rbvm/modules
sysuser = andrew

[database]
uri = sqlite:////home/andrew/rbvm.db

[web]
basedir = /home/andrew/rbvm
sessiondir = /tmp/rbvm/sessions
staticdir = /home/andrew/rbvm/static
viewdir = /home/andrew/rbvm/views
logdir = /tmp/rbvm/logs
accesslog = access.log
errorlog = error.log
sessiontimeout = 3600
bindaddress = 136.206.15.5
port = 8080
proxymode = true
proxybase = http://localhost:8080/

[vm]
imagedir = /var/lib/rbvm/images
isodir = /var/lib/rbvm/iso
defaultram = 128
defaultimagesize = 4196
defaultcores = 1
vncip = 127.0.0.1
vncbaseport = 5900
bridge = br0
ifupscript = /etc/qemu-ifup
ifdownscript = /etc/qemu-ifdown

[debug]
showtracebacks = true
logtoscreen = true
cherrypyenvironment = production

[tools]
qemu-img = /usr/bin/qemu-img
kvm = /usr/bin/qemu-kvm
sudo = /usr/bin/sudo
tunctl = /usr/sbin/tunctl
brctl = /usr/sbin/brctl

